<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="5dip" android:color="@color/moradoactionbar" />
            <gradient android:angle="-90" android:endColor="@color/moradoactionbar" android:startColor="@color/moradoactionbar" />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/naranjarojizo" />
            <gradient android:angle="-90" android:endColor="@color/moradoactionbar" android:startColor="@color/moradoactionbar" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="5dip" android:color="@color/naranjarojizo" />
            <gradient android:angle="-90" android:endColor="@color/blanco" android:startColor="@color/moradoactionbar" />
        </shape>
    </item>
</selector>